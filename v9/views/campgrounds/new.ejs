<% include ../partials/header %>
<div class='container'>
    <div class='row'>
        <h1 style='text-align: center;'>Submit a new campground:</h1>
        <div style='width: 30%; margin: 25px auto;'>
            <form action='/campgrounds' method='POST'> 
                <div class='form-group'>
                    <input class='form-control' type='text' placeholder='Name' name='name' method='POST'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' placeholder='Image' name='image' method='POST'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' placeholder='Description' name='description' method='POST'>
                </div>
                <div class='form-group'>
                    <input class='btn btn-primary btn-block btn-large' type="submit" value="Submit">
                </div>
            </form>
             <a href='/campgrounds'>Go Back</a>
        </div>
       
    </div>
</div>
<% include ../partials/footer %>